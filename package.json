{
  "name": "admin-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:push": "bun --filter db run db:push"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^1.11.3"
  },
  "packageManager": "bun@1.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}